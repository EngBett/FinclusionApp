@using System.Globalization
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

<div class="card col-md-12 mt-5">
    <div class="mt-3">
        <h5>Users</h5>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center mb-3" style="background-color: white">
        @if (Model.Any())
        {
            <table class="table table-striped table-borderless" style="font-size: 12px">
                <thead>
                <tr>
                    <th scope="col">UserId</th>
                    <th scope="col">Full name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Active</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <th scope="col">@user.Id</th>
                        <th scope="col">@user.FullName</th>
                        <th scope="col">@user.Email</th>
                        <th scope="col">@user.CreatedAt.ToString(CultureInfo.InvariantCulture)</th>
                        <th scope="col">@user.Active</th>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <small class="text-black-50 text-muted">No users yet!</small>
        }
    </div>
</div>