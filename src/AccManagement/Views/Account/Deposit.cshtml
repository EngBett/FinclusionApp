@model DepositViewModel

@{
    ViewData["Title"] = "Deposit";
}

<div class="card col-md-6 offset-md-3">
    <div class="mt-3">
        <h4>Deposit cash</h4>
    </div>
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        
        <div class="form-group">
            <label asp-for="Amount">Amount</label>
            <input asp-for="Amount" class="form-control" placeholder="Enter Amount to deposit">
        </div>
        <div class="form-group">
            <label asp-for="Narration">Narration</label>
            <small class="text-muted">(optional)</small>
            <input asp-for="Narration" class="form-control" placeholder="Narration">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Deposit</button>
        </div>
        <div class="form-group mb-3">
            Go <a asp-controller="Account" asp-action="Index">Back</a>
        </div>
    </form>
</div>